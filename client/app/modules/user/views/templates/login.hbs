<div class="custom-cell">
  <h2 class="subheader">{{i18n 'login'}}</h2>
  <form {{> 'user:browser_login_form_attributes' this}}>
    <label for="username">
      <span class="main">{{i18n 'username'}}</span>
      <span class="complement">({{i18n 'or email address'}})</span>
    </label>
    <div class="inputBox">
      <input type="text" id="username" name="username" class="enterClick radius">
    </div>

    {{> 'user:password_input' this}}

    <a id="classicLogin" class="button light-blue" tabindex="0">
      {{i18n 'login'}}
      <span class="loading"></span>
    </a>
  </form>

  <div class="otherOptions">
    <a id="createAccount">{{i18n 'create an account'}}</a>
    <a id="forgotPassword" class="link">{{i18n 'forgot your password?'}}</a>
  </div>

</div>
