{{#if image.url}}
  <div class="left">
    <img src="{{imgSrc image.url 500}}" class="img-zoom-in">
  </div>
{{/if}}
<div class="right">
  <div class="top">
    <span class="label">{{label}}</span>
    <a href="{{edit}}" class="showEntityEdit pencil" title="{{i18n 'edit data'}}">
      {{icon 'pencil'}}
    </a>
  </div>
  <span class="uri">{{uri}}</span>
  <div class="actions">
    {{> 'entities:cleanup:work_picker' this}}

    {{#if workLabel}}
      <a class="copyWorkLabel" title="{{i18n 'the edition new title would be:'}} {{workLabel}}">
        {{icon 'copy'}}
        <span>{{i18n 'copy work label'}}</span>
      </a>
    {{/if}}
  </div>
</div>
