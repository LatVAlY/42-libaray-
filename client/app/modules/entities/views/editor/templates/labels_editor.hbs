<div class="property-label">
  {{#if hasName}}
    <span class="title">{{I18n 'name'}}</span>
  {{else}}
    <span class="title">{{I18n 'title'}}</span>
  {{/if}}
  {{> 'entities:editor:language_selector' langs}}
</div>
<div class="label-editor">
  {{#if editMode}}
    {{> 'entities:editor:edit_mode' this}}
  {{else}}
    <div class="label-value displayModeData">{{value}}</div>
    {{> 'entities:editor:edit_button'}}
  {{/if}}
</div>