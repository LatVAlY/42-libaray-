{{#if editMode}}
  <div class="edit-mode input-editor">
    <div class="inputBox">
      <input type="text" name="title" class="string-value-input has-alertbox" value="{{value}}">
      <p class="tip"></p>
    </div>
    {{> 'entities:editor:edit_mode_buttons' this}}
  </div>
{{else}}
  <div class="displayModeData">{{value}}</div>
  {{> 'entities:editor:edit_button'}}
{{/if}}
