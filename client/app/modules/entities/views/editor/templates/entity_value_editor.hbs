{{#if editMode}}
  <div class="editMode">
    <div class="input-wrapper">
      <input type="text" value="{{value}}" class="has-alertbox" autocomplete="off" spellcheck="off" dir=" auto">
      <p class="tip"></p>
      <p class="selectedSuggestionStatus"></p>
      <div class="suggestionsContainer hidden"></div>
    </div>
    {{> 'entities:editor:edit_mode_buttons' this}}
  </div>
{{else}}
  <div class="displayModeData enterClick" tabindex="0">
    {{#if valueEntity}}
      <div class="value-entity-wrapper">
        {{#with valueEntity}}
          <div class="img-wrapper">
            {{#if image.url}}
              <img src='{{imgSrc image.url 48}}' alt='{{label}}'>
            {{else}}
              {{#each images}}
                <img src='{{imgSrc url 48}}' alt='{{label}}'>
              {{/each}}
            {{/if}}
          </div>
          <div>
            <span class="label">{{label}}</span><br>
            <span class="description">{{description}}</span>
            {{> 'entities:editor:identifier_with_tooltip' this}}
          </div>
        {{/with}}
      </div>
    {{else}}
      {{> 'loader' align='start'}}
    {{/if}}
  </div>
  {{> 'entities:editor:edit_button'}}
{{/if}}
