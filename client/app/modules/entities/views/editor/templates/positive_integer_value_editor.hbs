{{#if editMode}}
  <div class="edit-mode input-editor">
    <div class="inputBox">
      <input type="number" name="pages" class="positive-integer-picker has-alertbox" min="1" max="100000" placeholder="{{i18n 'ex:'}} 254" value="{{value}}">
    </div>
    {{> 'entities:editor:edit_mode_buttons' this}}
  </div>
{{else}}
  <div class="displayModeData">{{value}}</div>
  {{> 'entities:editor:edit_button'}}
{{/if}}
