<a href="{{pathname}}" class="showEntity" title="{{label}} - {{uri}}">
  {{#if image.url}}
    <div><img src="{{imgSrc image.url 64}}" alt="{{label}} {{i18n 'cover'}}"></div>
  {{/if}}
  <div>
    <div class="row">
      <span class="label">{{label}}</span>
      <span class="uri">{{uri}}</span>
    </div>
    <div class="claims">
      {{entityClaim claims 'wdt:P50'}}
    </div>
  </div>
</a>
