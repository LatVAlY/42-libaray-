<div class="info">
  <div class="cover">
    {{#if image.url}}
      <a class="showEntity" href="{{pathname}}" title="{{label}}">
        <img src="{{imgSrc image.url 150}}" alt="{{label}}">
      </a>
    {{/if}}
  </div>
  <div class="right-part">
    <div class="upper-part">
      <div class="claims">
        <a class="showEntity" href="{{pathname}}" title="{{label}}">
          <h4 class="edition-title">{{label}}</h4>
        </a>
        <div class="inner-claims">
          {{> 'entities:edition_claims' this}}
        </div>
      </div>
    </div>
  </div>
</div>
{{#unless compactMode}}
  <div class="editionEntityActions"></div>
  <div class="items">
    {{> 'entities:items_lists' prefix='edition' disabled=itemsListsDisabled}}
  </div>
{{/unless}}
