{{#unless hidePicture}}{{#if mainImage.url}}
  <div class="covers">
    <div class="main-cover">
      <img src="{{imgSrc mainImage.url 300}}" alt="{{label}} {{i18n 'cover'}}">
      {{> 'entities:photo_credits' image.credits}}
    </div>
    <div class="secondary-covers">
      {{#each secondaryImages}}
        <div class="secondary-cover">
          <img src="{{imgSrc url 150}}" alt="{{label}} {{i18n 'cover'}}">
          {{> 'entities:photo_credits' image.credits}}
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}{{/unless}}

<div class="entity-data-box">
  {{#if standalone}}
    <h2>{{label}}</h2>
  {{else}}
    <h2><a href="{{pathname}}" class="showEntity link">{{label}}</a></h2>
  {{/if}}
  <p class="uri">{{uri}}</p>
  {{> 'entities:clamped_extract' this}}
  <div class="attributes">
    {{> 'entities:authors_preview_lists'}}
    {{> 'entities:work_claims' this}}
  </div>
  {{#if standalone}}{{> 'entities:edit_data' this}}{{/if}}
</div>
