{{#if header}}<h3>{{I18n header}}</h3>{{/if}}
{{#if sortByLang}}
  {{#if hasEditions}}
    <div class="filters">
      <select class="languageFilter" name="language-filter" aria-label="language filter">
        <option value="all">{{i18n 'all languages'}}</option>
        {{#each availableLanguages}}
          <option value="{{code}}" {{#if selected}}selected{{/if}}>{{code}} - {{native}}</option>
        {{/each}}
      </select>
    </div>
  {{/if}}
{{/if}}
<ul></ul>
{{! publisher editions list work is undefined }}
{{#if hasWork}}
  {{> 'entities:editor:edition_creation' editionCreationData}}
{{/if}}
