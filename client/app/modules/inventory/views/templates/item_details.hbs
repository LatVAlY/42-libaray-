<div class="detailsPanel panel" tabindex="0">
  <div class="icon-buttons-header">
    <label>{{i18n 'details'}}</label>
    <div class="right">
      {{#unless restricted}}
        <span class="indicator" title="{{i18n 'this is visible by anyone who can see this item'}}">{{icon currentListing.icon}}</span>
        <a id="editDetails" class="editButton" title="{{i18n 'edit'}}">{{icon 'pencil'}}</a>
      {{/unless}}
    </div>
  </div>
  <p id="details" class="user-content">
    {{userContent details}}
  </p>
  <div id="detailsEditor" class='hidden'>
    <textarea placeholder='({{i18n 'details_placeholder'}})'>{{details}}</textarea>
    <div class="button-group-right">
      <a id="cancelDetailsEdition" class="cancelButton">{{i18n 'cancel'}}</a>
      <a id="validateDetails" class="validateButton">{{i18n 'save'}}</a>
    </div>
  </div>
</div>