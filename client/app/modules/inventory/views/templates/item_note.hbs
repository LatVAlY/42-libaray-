<div class="noteBox dark-panel" tabindex="0">
  <div class="icon-buttons-header">
    <label>{{i18n 'private notes'}}</label>
    <div class="right">
      {{> 'inventory:item_notes_lock'}}
      <a id="editNotes" class="editButton" title="{{i18n 'edit notes'}}">{{icon 'pencil'}}</a>
    </div>
  </div>
  <p id="notes" class="user-content">
    {{userContent notes}}
  </p>
  <div id="notesEditor" class='hidden'>
    <textarea placeholder='({{i18n 'notes_placeholder'}})'>{{notes}}</textarea>
    <div class="button-group-right">
      <a id="cancelNotesEdition" class="cancelButton">{{i18n 'cancel'}}</a>
      <a id="validateNotes" class="validateButton">{{i18n 'save'}}</a>
    </div>
  </div>
</div>
