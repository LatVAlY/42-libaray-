<div class="map-lists-wrapper {{#if mainUserHasPosition}}mainUserHasPosition{{/if}}">
  <div class="lists">
    <div class="list-wrapper {{#if hideUsers}}hidden{{/if}}">
      <div class="list-header">
        <p class="list-label">{{I18n 'users'}}</p>
        <div class="usersLoading"></div>
      </div>
      <div id="usersList"></div>
    </div>

    <div class="list-wrapper {{#if hideGroups}}hidden{{/if}}">
      <div class="list-header">
        <p class="list-label">{{I18n 'groups'}}</p>
        <div class="groupsLoading"></div>
      </div>
      <div id="groupsList"></div>
    </div>
  </div>

  {{!-- Avoid using just 'map' as id as that sets a global variable that might cause confusion --}}
  {{!-- See https://www.tjvantoll.com/2012/07/19/dom-element-references-as-global-variables/ --}}
  <div id="mapContainer"></div>
</div>

{{#unless mainUserHasPosition}}
  {{> 'map:position_required'}}
{{/unless}}
