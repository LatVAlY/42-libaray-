<div id="browserControls">
  <div id="browserFilters">
    <span class="control-label">{{I18n 'filters'}}</span>
    <div class="selectors">
      <div id="author"></div>
      <div id="genre"></div>
      <div id="subject"></div>
    </div>
    <div class="loading"></div>
  </div>
  <div id="displayControls" class="{{displayMode}} has-dropdown">
    <a class="current">
      <div class="{{#if cascade}}shown{{/if}}">{{icon 'th-large'}}</div>
      <div class="{{#if table}}shown{{/if}}">{{icon 'align-justify'}}</div>
      <span class="label">{{I18n 'display_mode'}}</span>
    </a>
    <ul id="displayOptions" class="dropdown">
      <li><a id="cascade">{{icon 'th-large'}} {{I18n 'cascade'}}</a></li>
      <li><a id="table">{{icon 'align-justify'}} {{I18n 'table'}}</a></li>
    </ul>
  </div>
</div>
<div id="itemsView"></div>
<div id="filterPreview"></div>
