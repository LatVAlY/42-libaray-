<ul class="task-scores">
  <li>
    <strong>{{i18n 'global match score'}}:</strong>
    {{globalScore}}
  </li>
  <li>
    <strong>{{i18n 'sources'}}:</strong>
    <span class="sources-count count-{{sourcesCount}}">{{sourcesCount}}</span>
    {{#if showSourcesLinks}}
      <ul class="sources-links">
        {{#each sources}}
          {{#if url}}
            <li>{{link text=url url=url title=sourceTitle classes='link'}}</li>
          {{/if}}
          {{#if uri}}
            <li>{{{entity uri true null null sourceTitle}}} <span class="uri">({{uri}})</span></li>
          {{/if}}
        {{/each}}
      </ul>
    {{/if}}
  </li>
  <li><strong>{{i18n 'lexical score'}}:</strong> {{lexicalScore}}</li>
</ul>
