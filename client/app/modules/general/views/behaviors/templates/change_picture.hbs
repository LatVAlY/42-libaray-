<figure class="changePicture">
  {{#if picture}}
  <img src="{{imgSrc picture 250 250}}"
    {{#if label}}alt="{{label}} {{i18n 'cover'}}"{{/if}}
    {{#if username}}alt="{{i18n 'profile pic'}}"{{/if}}
    class="{{changePicture.classes}}">
  {{/if}}

  {{#unless restricted}}
    <a id="changePicture" class="button light-blue" tabindex="0">
      {{icon 'camera'}}
      {{#if picture}}
        {{I18n 'change picture'}}
      {{else}}
        {{I18n 'add a picture'}}
      {{/if}}
    </a>
    <span class="loading"></span>
  {{/unless}}
</figure>