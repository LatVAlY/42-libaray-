    <input aria-label="search" id="searchField" name="search" placeholder="{{I18n 'search'}}" autocomplete="off" autocorrect="off" autocapitalize="off" type="search">
    <a class="closeSearch hidden">{{icon 'close'}}</a>
    <div id="liveSearch"></div>
    <div id="overlay" class="hidden"></div>
  </div>
</div>

